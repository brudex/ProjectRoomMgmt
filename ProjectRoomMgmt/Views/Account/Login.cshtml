@model ProjectRoomMgmt.Models.LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="p-l-50 m-l-20 p-r-50 m-r-20 p-t-50 m-t-30 sm-p-l-15 sm-p-r-15 sm-p-t-40">
    <img src="/Content/assets/img/logo.png" alt="logo" data-src="/Content/assets/img/logo.png" data-src-retina="/Content/assets/img/logo_2x.png" width="78" height="22">
    <h3>Welcome </h3>
    <section id="loginForm">
        @using (Html.BeginForm("Index", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "p-t-15", role = "form" }))
            {
            @Html.AntiForgeryToken()
            <h4>Sign in to your account.</h4>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group form-group-default">
                <label>Login</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "User Name", required = "required" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group form-group-default">
                <label>Password</label>
                <div class="controls">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Credentials", required = "required" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 no-padding">
                    <div class="checkbox ">
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe)
                    </div>
                </div>
            </div>


            <button class="btn btn-primary btn-cons m-t-10" type="submit">Sign in</button>
            <p>
                @Html.ActionLink("Register as a new user", "Register")
                @*<a data-target="#registerModal" data-toggle="modal">Not Signed up? Register</a>*@
            </p>

        }
    </section>

</div>

