@model dynamic
 

@{
    ViewBag.Title = "Room Allocation";
    Layout = "~/Views/Shared/_Layout_Main.cshtml";
}

<h2>@ViewBag.Title</h2>



<div class="row" data-ng-controller="RoomAllocationController as vm" data-ng-init="vm.init()">
    </div>

    <div class="row">
        <div class="col-md-6">
            <form role="form">

                @if (ViewBag.Error != null)
            {
                    <div class="alert alert-error">
                        @ViewBag.Error
                    </div>
                }
                else if (ViewBag.Success != null)
                {
                    <div class="alert alert-error">
                        @ViewBag.Success
                    </div>
                }

                <div class="form-group-attached m-b-10">
                    <div class="row">
                        <div class="col-sm-9">
                            <div class="form-group form-group-default">
                                <label>Student No</label>
                                <input type="text" class="form-control" required="" name="studentNo" data-ng-model="vm.model.studentNo">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group-attached m-b-10">
                    <div class="row">
                        <div class="col-sm-9">
                            <div class="form-group form-group-default">
                                <label>Student Name</label>
                                <div type="text" class="form-control" required="" name="studentName" data-ng-model="vm.model.studentName">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group-attached m-b-10">
                    <div class="row">
                        <div class="col-sm-9">
                            <div class="form-group form-group-default">
                                <label>Select Room</label>
                                <select type="text" class="form-control" required="" name="roomNo" data-ng-model="vm.model.roomNo"></select>
                            </div>
                        </div>
                    </div>
                </div>

                <input type="submit" class="btn btn-md btn-primary" value="Assign Room" />

            </form>
        </div>
    </div>

