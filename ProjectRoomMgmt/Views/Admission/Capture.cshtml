@model ProjectRoomMgmt.Models.AdmissionViewModel

@{
    ViewBag.Title = "Capture New Admission";
    Layout = "~/Views/Shared/_Layout_Main.cshtml";
}

<h2>Capture Admission Information</h2>

 
<div class="row">
    <div class="col-md-6">
        <form role="form" method="POST" action="@Url.Action("Capture","Admission")">

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-error">
                    @ViewBag.Error
                </div>
            }
            else if (ViewBag.Success != null)
            {
                <div class="alert alert-error">
                    @ViewBag.Success
                </div>
            }
            
                <div class="form-group-attached m-b-10">
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group form-group-default">
                                <label>First Name</label>
                                <input type="text" class="form-control" required="" name="FirstName">
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group form-group-default">
                                <label>Last Name</label>
                                <input type="text" class="form-control" required="" name="LastName">
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group form-group-default">
                                <label>Other Names</label>
                                <input type="text" class="form-control" required="" name="OtherNames">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group-attached m-b-10">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group form-group-default">
                                <label>Nationality</label>
                                <input type="text" class="form-control" required="" name="Nationality">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group form-group-default">
                                <label>Country of birth</label>
                                <input type="text" class="form-control" name="CountryOfOrigin">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group-attached m-b-10">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group form-group-default">
                                <label>Occupation</label>
                                <input type="text" class="form-control" required="" name="Occupation">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group form-group-default">
                                <label>Originating Institute</label>
                                <input type="text" class="form-control" name="OriginatingInstitute" required="">
                            </div>
                        </div>
                    </div>
                </div>
                <input type="submit" class="btn btn-md btn-primary" value="Submit"/>
            
        </form>
    </div>    
</div>
