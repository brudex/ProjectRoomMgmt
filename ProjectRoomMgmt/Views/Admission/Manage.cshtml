<section class="row" data-ng-controller="AdmissionController as vm" data-ng-init="vm.init()">
    <div class="col-md-12">
        <div class="btn-group">
            <button class="btn btn-primary m-r-10" data-ng-click="vm.advancedManage()">Advanced Manage</button>
            <button class="btn btn-primary m-r-10" data-ng-click="vm.newAdmission()">New Admission</button>
        </div>
    </div>
    <div class="col-md-12">

        <div class="table-responsive">
            <table class="table table-hover table-striped" id="applicationsTable">
                <thead>
                    <tr>
                        <th style="width:1%">
                            <button class="btn">
                                <i class="pg-trash"></i>
                            </button>
                        </th>
                        <th style="width:20%">Applicant Name</th>
                        <th style="width:20%">Country Of Origin</th>
                        <th style="width:20%">Originating Institute</th>
                        <th style="width:10%">Course Name</th>
                        <th style="width:10%">Admission status</th>
                    </tr>
                </thead>
                <tbody>
                    <tr data-ng-repeat="result in vm.searchResult">
                        <td style="width:15%"><div class="btn-group">
                            <button type="button" class="btn btn-warning">
                                <i class="fa fa-pencil"></i>
                            </button>
                            <button type="button" class="btn btn-danger">
                                <i class="fa fa-trash-o"></i>
                            </button> 

                            <button type="button" class="btn btn-success" data-ng-click="vm.setAdmissionStatus(result,'Accepted')">
                                <i class="fa fa-check"></i>Admit
                            </button>

                        </div></td>
                        <td style="width:20%" data-ng-bind="result.FullName">Applicant Name</td>
                        <td style="width:20%" data-ng-bind="result.CountryOfOrigin">CountryOfOrigin</td>
                        <td style="width:20%" data-ng-bind="result.OriginatingInstitute">OriginatingInstitute</td>
                        <td style="width:10%" data-ng-bind="result.CourseName">CourseName</td>
                        <td style="width:10%" data-ng-bind="result.AdmissionStatus">Admissionstatus</td>
                    </tr>

                </tbody>
            </table>
        </div>
    </div>




